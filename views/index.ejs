<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Url Shortener | Poorvank</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1 class="mt-3">URL Shrinker</h1>
      <form action="/shortUrls" method="post">
        <label for="fullUrl" class="visually-hidden">Url</label>
        <input
          type="url"
          name="fullUrl"
          id="fullUrl"
          placeholder="Url"
          required
          class="form-control mr-2"
        />
        <button type="submit" class="btn btn-success my-2">Shrink</button>
      </form>
      <!-- <div class="table-responsive">style="word-wrap: break-word;min-width: 160px;max-width: 160px;" -->
            <table class="table table-striped">
            <thead>
                <tr>
                <th class="text-wrap text-break" style="width: 80%;">Full Url</th>
                <th>Short Url</th>
                <th>Clicks</th>
                <!-- <th>Delete</th> -->
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl=>{ %>
                <tr>
                <td class="text-wrap text-break" style="width: 80%;">
                    <a href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
                </td>
                <td><a href="<%= shortUrl.short %>" target="_blank"><%= shortUrl.short %></a></td>
                <td><%= shortUrl.clicks %></td>
                <!-- <td><a href=""><button class="btn btn-sms btn-danger" >Delete</button></a></td> -->
                </tr>
                <% }) %>
            </tbody>
            </table>
      <!-- </div> onclick="()=>{onDelete(shortUrl.short)}"-->
    </div>
  </body>
</html>
